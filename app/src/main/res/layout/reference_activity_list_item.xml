<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_margin="16dp"
              android:background="@drawable/custom_button" android:baselineAligned="false">
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="8">
    <TextView
            android:layout_weight="1"
            android:id="@+id/reference_activity_list_item_text_view_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:paddingLeft="2dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"/>
    <TextView
            android:layout_weight="1"
            android:id="@+id/reference_activity_list_item_text_view_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:paddingStart="4dp"
            android:paddingTop="2dp"
            android:paddingEnd="2dp"/>
    <TextView
            android:layout_weight="2"
            android:id="@+id/reference_activity_list_item_text_view_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:paddingStart="4dp"
            android:paddingTop="2dp"
            android:paddingEnd="2dp"/>
    </LinearLayout>

</LinearLayout>