<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.ReferenceActivity"
    tools:showIn="@layout/activity_reference">

    <Button
            android:text="Insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reference_insert_item" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="64dp"
            android:onClick="onInsertClick"/>
    <TextView
            android:text="TextView"
            android:layout_width="104dp"
            android:layout_height="27dp"
            android:id="@+id/reference_insert_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="300dp"/>
    <EditText
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="56dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="344dp"/>
</android.support.constraint.ConstraintLayout>